<style>


    .btn-pass {
        background: none; /* color de fondo */
        color: black; /* color de fuente */
        border: 2px solid #000000; /* tamaño y color de borde */
        padding: 16px 20px;
        border-radius: 3px; /* redondear bordes */
        position: relative;
        z-index: 1;
        overflow: hidden;
        display: inline-block;
        border-radius: 20px;
    }

        .btn-pass:hover {
            color: white; /* color de fuente hover */
        }

        .btn-pass::after {
            content: "";
            background: rgb(80,13,71);
            background: linear-gradient(90deg, rgba(80,13,71,1) 29%, rgba(98,4,88,1) 54%, rgba(36,1,56,1) 100%); /* color de fondo hover */
            position: absolute;
            color: white;
            z-index: -1;
            padding: 16px 20px;
            display: block;
            left: -20%;
            right: -20%;
            top: 0;
            bottom: 0;
            transform: skewX(-45deg) scale(0, 1);
            transition: all 0.3s ease;
        }

        .btn-pass:hover::after {
            transition: all 0.3s ease-out;
            transform: skewX(-45deg) scale(1, 1);
        }
</style>

